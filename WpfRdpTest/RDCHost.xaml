<Window x:Class="WpfRdpTest.RDCHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRdpTest"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Remote Desktop Connection" 
        Height="786" Width="1024" 
        Closing="Window_Closing" 
        Background="{x:Null}" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ThreeDBorderWindow" 
        ScrollViewer.CanContentScroll="True">
    <Window.Resources>
        <sys:String x:Key="RdpConnectionError" xml:space="preserve">RDP Connection Error</sys:String>
    </Window.Resources>
    <WindowsFormsHost Name="FormHost" ChildChanged="FormHost_ChildChanged"/>
</Window>

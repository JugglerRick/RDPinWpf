<Window x:Class="WpfRdpTest.Busy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRdpTest"
        xmlns:aucl ="clr-namespace:ApolloUserControlLibrary"
        mc:Ignorable="d"
        Title="Connecting"
        Height="116" Width="116" 
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource ApolloBrushes.LBG3}" 
        ShowInTaskbar="False" 
        Topmost="True" 
        WindowStyle="None" 
        Loaded="Window_Loaded" Closing="Window_Closing"
        
        >
        
    <Grid>
        <aucl:MetroCircleBusyIndicator x:Name="Spinner"></aucl:MetroCircleBusyIndicator>
    </Grid>
</Window>

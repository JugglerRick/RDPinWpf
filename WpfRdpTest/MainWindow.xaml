            </Canvas>
        </Viewbox>
        <!-- The 'Remote Desktop' text at top -->
        <TextBlock 
            TextAlignment="Left" 
            FontFamily="Segoe UI" 
            FontSize="26" 
            Grid.Row="0" 
            Grid.Column="1" Grid.ColumnSpan="2" 
            Margin="0,9,0,0">
            <Run Text="Remote Desktop" Foreground="{StaticResource BannerTextBrush}"/>

        </TextBlock>
        <!-- The 'Connection' text at the top -->
        <TextBlock  
            TextAlignment="Left" 
            FontFamily="Segoe UI Semibold" 
            FontWeight="Bold" 
            FontSize="30" 
            Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" 
            Margin="0,31,0,0" 
            >
            <Run Text="Connection" Foreground="{StaticResource BannerTextBrush}"/>

        </TextBlock>
        <TextBlock Text="Computer:"
                   Grid.Row="2" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   FontSize="12"
                   Foreground="{StaticResource ApolloBrushes.WH}"
                   
                   />
        <TextBox x:Name="ComputerName" 
                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" 
                 Margin="0,5" 
                 Text="{Binding Path=Computer}"
                 />
        <TextBlock Text="User Name:"
                   Grid.Row="3" Grid.Column="0" 
                   HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0,0,10,0"
                   FontSize="12"
                   Foreground="{StaticResource ApolloBrushes.WH}"
                   />
        <TextBox x:Name="UserName" 
                 Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" 
                 Margin="0,5" 
                 Text="{Binding Path=Usere}"
                 />
        <Button x:Name="ConnectBtn" 
                Width="70" Height="30" 
                Grid.Row="5" Grid.Column="2" 
                Background="{StaticResource ApolloBrushes.WH}"
                BorderThickness="0"
                Click="ConnectBtn_Click"
                >
            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource ApolloBrushes.BG3}" Text="Connect"/>
        </Button>

        <Button x:Name="CloseBtn" 
                Width="70" Height="30" 
                Grid.Row="5" Grid.Column="3" 
                Background="{StaticResource ApolloBrushes.LBG1}"
                Click="CloseBtn_Click"
                >
            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource ApolloBrushes.BG3}" Text="Close"/>
        </Button>

        <Button x:Name="PreSelectBtn" 
                Width="91" Height="30" 
                Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="23,0,0,0" 
                HorizontalAlignment="Left" VerticalAlignment="Center" BorderThickness="0"
                Background="{StaticResource ApolloBrushes.LBG1}"
                Click="PreSelectBtn_Click"
                >
            <TextBlock FontFamily="Segoe UI" FontSize="12" Foreground="{StaticResource ApolloBrushes.BG3}" Text="Pre-selections"/>
        </Button>

    </Grid>
</Window>
